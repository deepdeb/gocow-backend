
datasource db {
    provider = "mysql"
    url = env("MYSQL_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Customer {
    userUid String @id
    phone_num String @unique
    customer_name String
    customer_type String
    wallet_balance Decimal
    createdAt DateTime @default(now())
}

model Product {
    product_id Int @id @default(autoincrement())
    product_name String 
    product_image String
    availability String
    product_description String
    is_deleted Boolean
    unit String
    package String
    catch_phrase String
    price Decimal
}

model Sales {
    sales_id Int @id @default(autoincrement())
    sale_date DateTime
    product_id Int
    sold_price Decimal
    sold_quantity Decimal
    customer_id String
    created_at DateTime @default(now())
}

model Offers {
    offer_id Int @id @default(autoincrement())
    product_id Int
    offer_amount Decimal
    offer_type String
    offer_code String
    is_active Boolean
    is_deleted Boolean
    created_at DateTime @default(now())
}

model DailyWaste {
    daily_waste_id Int @id @default(autoincrement())
    product_id Int
    waste_date DateTime
    waste_price Decimal
    waste_quantity Decimal
    waste_reason String
}

model DailyInventory {
    daily_inventory_id Int @id @default(autoincrement())
    product_id Int
    inventory_price Decimal
    quantity Decimal
    date DateTime
    created_at DateTime @default(now())
}

model Address {
    address_id Int @id @default(autoincrement())
    flat String?
    house String?
    apartment String?
    locality String?
    area String?
    landmark String?
    coordinate String
    created_at DateTime @default(now())
}